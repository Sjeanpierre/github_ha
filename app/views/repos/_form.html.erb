<%= simple_form_for @repo, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :owner %>
  <%= f.input :last_tag %>
  <%= f.input :last_commit %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                repos_path, :class => 'btn' %>
  </div>
<% end %>
