<%- model_class = Repo -%>
<div class="repo-heading">
  <h1>Repo Details for <%= @repo.name %></h1>
</div>
<div class="repo-subheading">
  <ul>
    <li><b><%= model_class.human_attribute_name(:owner) %>: </b><%= @repo.owner %></li>
    <li><b><%= model_class.human_attribute_name(:last_tag) %>: </b><%= @repo.downloads.last.try(:tag) || 'N/A' %></li>
    <li class="last"><b>Git repo ID: </b><%= @repo.git_repo_id %></li>
  </ul>
</div>


<%	 if @repo.downloads.blank? %>
	<p><b>There are currently no downloads to show for this Repository</b></p>
<% else %>
  <%= render :partial => 'downloads' %>
<% end %>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              repos_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_repo_path(@repo), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              repo_path(@repo),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
	<%=	 link_to 'new', new_repo_download_path(@repo), :class => 'btn btn-info' %>
</div>
