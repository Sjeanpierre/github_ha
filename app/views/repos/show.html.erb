<%- model_class = Repo -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<div class="well">
  <p><b><%= model_class.human_attribute_name(:name) %>: </b><%= @repo.name %><p>
  <p><b><%= model_class.human_attribute_name(:owner) %>: </b><%= @repo.owner %><p>
  <p><b><%= model_class.human_attribute_name(:last_tag) %>: </b><%= @repo.last_tag %><p>
  <p><b><%= model_class.human_attribute_name(:git_repo_id) %>: </b><%= @repo.git_repo_id %><p>
</div>

<%	 if @repo.downloads.blank? %>
	<p><b>There are currently no downloads to show for this Repository</b></p>
<% else %>
  <%= render :partial => 'downloads' %>
<% end %>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              repos_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_repo_path(@repo), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              repo_path(@repo),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
	<%=	 link_to 'new', new_repo_download_path(@repo), :class => 'btn btn-info' %>
</div>
