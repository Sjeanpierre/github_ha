<%- model_class = Repo -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>

<%	 if @repos.blank? %>
  <p><b>There are currently no repositories selected for backup, please go to the <%=	 link_to 'add repository page', :controller => :settings, :action => :github_repos  %> to add some.</b></p>
<% else %>
  <%= render :partial => 'repos' %>
<% end %>

